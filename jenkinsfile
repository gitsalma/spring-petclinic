pipeline {
agent none
        environment {
		DOCKERHUB_CREDENTIALS=credentials('jenkins-docker')
	}
stages {
stage('Maven Install') {
agent {
docker {
image 'maven:3.8.6'
}
}
steps {
sh 'mvn -e clean install -Dcheckstyle.skip'
}
}
stage('Docker Build') {
agent any
steps {
sh 'docker build -t salmadokker1/spring-petclinic:latest .'
}
}
   stage('Docker Push') {
        agent any
        steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh 'docker push salmanahhass1/salmadokker1/spring-petclinic:latest'
        }
        }

   stage('Deploy App') {
      agent any
      steps {
        script {
         kubernetesDeploy(configs: "spring-petclinic.yml", kubeconfigId: "KubeConfig")
        }
      }
    }
}
}
